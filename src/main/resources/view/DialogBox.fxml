<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<HBox xmlns:fx="http://javafx.com/fxml"  spacing="10">
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>

    <!-- Display picture on the left -->
    <ImageView fx:id="displayPicture" fitHeight="50" fitWidth="50" />

    <!-- Dialog text -->
    <Label fx:id="dialog" wrapText="true" style="-fx-background-color: #f0f0f0; -fx-padding: 5; -fx-background-radius: 5;"/>
</HBox>
